

        <main>
                
            <section id="details-page">

                <div class="main_card">
                    <div class="card_left">
                        <div class="card_datails"> 

                            <h1>{{detFilm.tittle}}</h1>
                            <div class="card-movie">
                                <div class="first-info">
                                    <p class="card-genre">Genre: {{detFilm.genre}}</p>
                                    <p class="card-director">Directror: {{detFilm.director}}</p>
                                </div>
                                <div class="second-info">
                                    <p class="card-year">Year: {{detFilm.year}}</p>
                                    <p class="card-ranking">Rating: <span id="stars">&#x2605; &#x2605; &#x2605;
                                            &#x2605;</span></p>
                                </div>

                            </div>

                            <p class="disc">Description: {{detFilm.description}}</p>
                        </div>
                    </div>
                    <div class="card_right">
                        <img src={{detFilm.imageURL}}
                            alt="image">
                    </div>
                </div>

            </section>
                
        </main>

